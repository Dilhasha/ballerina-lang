{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config Toml Spec",
  "description": "Schema for Config Toml",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "mymock": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "foo": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "testMode": {
              "type": "boolean",
              "message": {
                "pattern": "invalid value for 'testMode' under [mymock.foo]: 'testMode' can only contain boolean"
              }
            },
            "clientURL": {
              "type": "string",
              "message": {
                "pattern": "invalid value for 'clientURL' under [mymock.foo]: 'clientURL' can only contain string values"
              }
            },
            "myVal": {
              "type": "string",
              "message": {
                "pattern": "invalid value for 'myVal' under [mymock.foo]: 'myVal' can only contain string values"
              }
            },
            "newVal": {
              "type": "number",
              "message": {
                "pattern": "invalid value for 'myVal' under [mymock.foo]: 'newVal' can only contain integer values"
              }
            }
          },
          "required": [
            "myVal", "newVal"
          ],
          "message": {
            "required": "cannot find '${property}' under 'mymock.foo'"
          }
        }
      },
      "required": [
        "foo"
      ],
      "message": {
        "required": "cannot find '${property}' under 'mymock'"
      }
    }
  }
}
